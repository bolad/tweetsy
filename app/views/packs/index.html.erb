<p id="notice"><%= notice %></p>

<h1>Tweet Packs</h1>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Tweets</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packs.each do |pack| %>
      <tr>
        <td><%= pack.name %></td>
        <td><%= pack.tweets.count %></td>

        <td><%= link_to image_tag('octicon_svg/plus'), new_pack_tweet_path(pack) %></td>
        <td><%= link_to image_tag('octicon_svg/pencil'), edit_pack_path(pack) %></td>
        <td><%= link_to image_tag('octicon_svg/trashcan'), pack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pack', new_pack_path, class: "btn btn-primary" %>
